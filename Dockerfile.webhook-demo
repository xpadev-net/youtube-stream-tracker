# Build stage
FROM golang:1.24-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /webhook-demo ./cmd/webhook-demo

# Runtime stage
FROM alpine:3.19

RUN apk add --no-cache ca-certificates tzdata

WORKDIR /app

COPY --from=builder /webhook-demo /app/webhook-demo

EXPOSE 9090

ENTRYPOINT ["/app/webhook-demo"]
